<%= form_with model: shift, url: url, local: false do |f| %>
<%= render 'shared/error_messages', object: f.object %>

  <table class="table table-borderless">
    <tr>
      <td><%= f.label t("activerecord.attributes.Shift.title"), class: "control-label" %></td>
    </tr>
    <tr>
      <td><%= f.text_field :title, class: "form-control" %></td>
    </tr>

    <tr>
      <td><%= f.label t("activerecord.attributes.Shift.start_time"), class: "control-label" %></td>
    </tr>
    <tr>
      <td>
        <div class="datetime_select">
          <%= raw sprintf(f.datetime_select(:start_time, with_css_classes: true, default: default_date, use_month_numbers: true, start_year: (Time.current.year), end_year: (Time.current.year + 1), date_separator: '%s', datetime_separator: "%s", time_separator: "%s"), "年 ", "月 ", "日 ", "時 ") + "分" %>
        </div>
      </td>
    </tr>

    <tr>
      <td><%= f.label t("activerecord.attributes.Shift.end_time"), class: "control-label" %></td>
    </tr>
    <tr>
      <td>
        <div class="datetime_select">
          <%= raw sprintf(f.datetime_select(:end_time, with_css_classes: true, default: default_date, use_month_numbers: true, start_year: (Time.current.year), end_year: (Time.current.year + 1), date_separator: '%s', datetime_separator: "%s", time_separator: "%s"), "年 ", "月 ", "日 ", "時 ") + "分" %>
        </div>
      </td>
    </tr>
  </table>

  <div class="d-flex justify-content-end">
    <% if action_name == "edit" %>
      <%= link_to "削除", shift_path(shift), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger me-1" %>
    <% end %>

    <%= f.submit class: "btn btn-success" %>
<% end %>
