<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 50 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.shifts.any? %>
      <h3>シフト (<%= @user.shifts.count %>)</h3>
      <ol class="shifts">
        <%= render @shifts %>
      </ol>
      <%= will_paginate @shifts %>
    <% end %>
  </div>


</div>